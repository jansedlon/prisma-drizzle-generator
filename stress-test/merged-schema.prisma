  submitTitle                   String?
  showPriceDown                 Boolean @default(false)
  hidePriceOnPreview            Boolean @default(false)
  disableFloatingCheckoutButton Boolean @default(false)
  disableCallToActionButton     Boolean @default(false)
  bottomTitle                   String?
  video                         String?
  embededVideo                  String?
  customerNotice                String?

