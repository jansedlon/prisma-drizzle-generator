model StoreProductUpSell {
  /// drizzle.default @paralleldrive/cuid2::createId
  id            String                 @id @default(cuid())
  product       StoreProduct           @relation(fields: [productId], references: [id], onDelete: NoAction, onUpdate: Cascade)
  productId     String
  description   String
  price         Int
  customVatRate Int?
  order         Int
